<!DOCTYPE html>
<html>
<body>

<h2>  </h2>

	<div class="card-deck">
		<% @barbers.each do |b| %>
		   	 <% customers = b.wait_list %>

			<div class="card" style="width: 18rem;">
				<div class="card-body">
					<h5 class="card-title"><%= b.name %></h5>
					<p class="card-text">
						<ul class="list-group list-group-flush">
						  	 <% customers.each do |c| %>
					     	<li class="list-group-item" data-toggle="modal" data-target="#exampleModal<%= c.id %>"><%= c.name %> </li>

					     	<!-- Modal -->
							<div class="modal fade" id="exampleModal<%= c.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
							  <div class="modal-dialog" role="document">
							    <div class="modal-content">
							      <div class="modal-header">
							        <h5 class="modal-title" id="exampleModalLabel"><%= c.name %></h5>
							        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
							          <span aria-hidden="true">&times;</span>
							        </button>
							      </div>
							      <div class="modal-body">
							        ...
							      </div>
							      <div class="modal-footer">
							        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
							        <a href="/pop/<%= c.id %>" class="btn btn-primary">Delete</a>
							      </div>
							    </div>
							  </div>
							</div>


							 <% end %>
					  </ul>
					</p>
				</div>
			</div>
	 	<% end %>
 	</div>
</body>
</html>